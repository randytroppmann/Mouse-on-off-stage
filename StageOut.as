package  {		import flash.display.MovieClip;			public class StageOut extends MovieClip {		import flash.events.MouseEvent;		import flash.events.Event;				public function StageOut() {			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage, false, 0, true);		}				protected function onAddedToStage(event:Event):void{			stage.addEventListener(MouseEvent.MOUSE_OUT, handleStageMouseOut, false, 0, true);			stage.addEventListener(MouseEvent.MOUSE_OVER, handleStageMouseOver, false, 0, true);		}		function handleStageMouseOut(evt:MouseEvent):void{			out.text = "Mouse off stage";			}						function handleStageMouseOver(evt:MouseEvent):void{			out.text = "Mouse on stage";			}	}	}